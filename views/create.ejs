<%- include('header')%>
<div class="ui grid">
    <div class="three wide column">
        <a href="/posts?author=<%= user._id %>" class="avatar avatar-link"
           data-title="<%= user.name%> | <%=({m:'男',f:'女',x:'保密'})[user.gender]%>"
           data-content="<%=user.bio%>">
            <img src="/img/<%=user.avatar%>" alt="" class="avatar">
        </a>
    </div>

    <div class="ten wide column">
        <form action="" class="ui form segment piled" method="post">
            <div class="field required">
                <label for="">标题</label>
                <input type="text" name="title">
            </div>
            <div class="field required">
                <label for="">内容</label>
                <div class="ui-loader-container">
                    <div class="ui active centered inline loader"></div>
                </div>
                <!-- 加载编辑器的容器 -->
                <script id="contentCreate" name="content" type="text/plain"></script>
            </div>
            <input type="submit" class="ui button" value="发布">
        </form>
    </div>
</div>
<!-- 配置文件 -->
<script type="text/javascript" src="/ueditor/ueditor.config.js"></script>
<!-- 编辑器源码文件 -->
<script type="text/javascript" src="/ueditor/ueditor.all.js"></script>
<!-- 实例化编辑器 -->
<script type="text/javascript">
    let ue = UE.getEditor('contentCreate',{initialFrameHeight:400});
    ue.ready(() => {
        $('.ui-loader-container').remove();
    });
</script>
<%- include('footer')%>
